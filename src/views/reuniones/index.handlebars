{{#if success}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="bi bi-check-circle"></i> {{success}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="bi bi-exclamation-circle"></i> {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

<h1 class="mb-4">
    <i class="bi bi-calendar-range"></i> Reuniones Disponibles
</h1>

{{#if reuniones.length}}
<div class="row">
    {{#each reuniones}}
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">{{this.titulo}}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">{{this.descripcion}}</p>
                <p class="mb-1">
                    <strong><i class="bi bi-person"></i> Vendedor:</strong> {{this.vendedor.nombre}}
                </p>
                <p class="mb-1">
                    <strong><i class="bi bi-calendar-date"></i> Fecha:</strong>
                    {{formatDate this.fecha}}
                </p>
                <p class="mb-1">
                    <strong><i class="bi bi-clock"></i> Hora:</strong>
                    {{this.hora}}
                </p>
                <p class="mb-1">
                    <strong><i class="bi bi-hourglass-split"></i> Duraci√≥n:</strong>
                    {{this.duracion}} minutos
                </p>
                <p class="mb-0">
                    <span class="badge bg-success">Disponible</span>
                </p>
            </div>
            <div class="card-footer">
                <a href="/reuniones/{{this.id}}" class="btn btn-primary btn-sm w-100">
                    <i class="bi bi-eye"></i> Ver Detalle
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="alert alert-info">
    <i class="bi bi-info-circle"></i> No hay reuniones disponibles en este momento.
</div>
{{/if}}