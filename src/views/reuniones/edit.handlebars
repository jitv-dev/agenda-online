<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning">
                <h3 class="mb-0">
                    <i class="bi bi-pencil"></i> Editar Reunión
                </h3>
            </div>
            <div class="card-body">
                <form action="/reuniones/{{reunion.id}}?_method=PUT" method="POST" id="formEditarReunion">

                    <!-- Cliente Actual/Cambiar Cliente -->
                    <div class="mb-4 border rounded p-3 bg-light">
                        <h5 class="mb-3">
                            <i class="bi bi-person-circle"></i> Cliente Asignado
                        </h5>

                        {{#if clienteAsignado}}
                        <div class="alert alert-info mb-3">
                            <strong>Cliente actual:</strong> {{clienteAsignado.nombre}}
                            <small class="text-muted">({{clienteAsignado.email}})</small>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="cambiarCliente" name="cambiarCliente"
                                value="true">
                            <label class="form-check-label" for="cambiarCliente">
                                <i class="bi bi-arrow-repeat"></i> Cambiar cliente asignado
                            </label>
                        </div>
                        {{else}}
                        <div class="alert alert-warning mb-3">
                            <i class="bi bi-exclamation-triangle"></i>
                            Esta reunión no tiene cliente asignado (es pública)
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="cambiarCliente" name="cambiarCliente"
                                value="true">
                            <label class="form-check-label" for="cambiarCliente">
                                <i class="bi bi-person-plus"></i> Asignar cliente (convertir a privada)
                            </label>
                        </div>
                        {{/if}}

                        <div id="selectorClienteContainer" style="display: none;">
                            <label for="clienteId" class="form-label">Nuevo Cliente</label>
                            <select class="form-select" id="clienteId" name="clienteId">
                                <option value="">-- Selecciona un cliente --</option>
                                {{#each clientes}}
                                <option value="{{this.id}}">
                                    {{this.nombre}} ({{this.email}})
                                </option>
                                {{/each}}
                            </select>
                            <small class="text-muted">
                                {{#if clienteAsignado}}
                                El cliente anterior perderá acceso a esta reunión
                                {{else}}
                                La reunión dejará de ser pública
                                {{/if}}
                            </small>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Datos de la Reunión -->
                    <div class="mb-3">
                        <label for="titulo" class="form-label">Título *</label>
                        <input type="text" class="form-control" id="titulo" name="titulo" value="{{reunion.titulo}}"
                            required>
                    </div>

                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion"
                            rows="3">{{reunion.descripcion}}</textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="fecha" class="form-label">Fecha *</label>
                            <input type="date" class="form-control" id="fecha" name="fecha"
                                value="{{formatDateInput reunion.fecha}}" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="hora" class="form-label">Hora *</label>
                            <input type="time" class="form-control" id="hora" name="hora" value="{{reunion.hora}}"
                                required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="duracion" class="form-label">Duración (minutos)</label>
                            <input type="number" class="form-control" id="duracion" name="duracion"
                                value="{{reunion.duracion}}" min="15" step="15">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-select" id="estado" name="estado">
                                {{#each estados}}
                                <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>
                                    {{formatEstado this.value}}
                                </option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                        <a href="/reuniones/gestionar" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/formularios.js"></script>